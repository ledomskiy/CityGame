<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/answer_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
        	android:id="@+id/answer_first_char"
        	android:layout_width="@dimen/answer_first_char_width"
        	android:layout_height="wrap_content"
        	android:gravity="right"
        	android:textColor="@color/first_char_color"
        	android:textSize="@dimen/answer_first_char_text_size"
        />
    	<EditText 
		    android:id="@+id/answer"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:inputType="textNoSuggestions"/>    
    </LinearLayout>
    
	<Button
	    android:id="@+id/input_answer"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/input_anwer"/>
    

</LinearLayout>
